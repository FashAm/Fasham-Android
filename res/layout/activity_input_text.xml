    <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="280dp"
            >

        <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:checked="true"
                android:text="Public"/>

        <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="friendsclick"
                android:text="Friends"
                android:textStyle="bold"/>

    </RadioGroup>

    <EditText
            android:id="@+id/TagText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:background="#f5f5dc"
            android:ems="10"
            android:hint="Picture 2"
            android:inputType="textMultiLine"
            android:textColor="#000000"/>

    <TextView
            android:id="@+id/commentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:text="Tags"
            android:textColor="#000011"
            android:textSize="21sp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/TagView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:text="Occasion"
            android:textColor="#000011"
            android:textSize="21sp"
            android:textStyle="bold"/>

    <EditText
            android:id="@+id/commentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TagView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="#f5f5dc"
            android:ems="10"
            android:hint=" eg.Dinner"
            android:inputType="textMultiLine"
            android:textColor="#000000"/>

    <requestFocus/>

    <EditText
            android:id="@+id/TagText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:background="#f5f5dc"
            android:ems="10"
            android:hint="Picture 1"
            android:inputType="textMultiLine"
            android:textColor="#000000">

    </EditText>

    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/TagView"
        android:layout_marginBottom="23dp"
        android:drawableRight="@drawable/ic_menu_agenda"
        android:text="Upload"
        android:textSize="21sp"
        android:textStyle="bold" />

</RelativeLayout>
